Config { font = "xft:MonoSpace:pixelsize=13:antialias=true"
       , borderColor = "black"
       , border = TopB
       , bgColor = "black"
       , fgColor = "grey"
       , position = Top L 105
       , lowerOnStart = True
       , persistent = False
       , hideOnStart = False
       , commands = [ Run Network "eth0" ["-L","0","-H","32","--normal","green","--high","red"] 10
                    , Run Network "eth1" ["-L","0","-H","32","--normal","green","--high","red"] 10
                    , Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
                    , Run Memory ["-t","Mem: <usedratio>%", "-L", "30", "-H", "70", "--normal", "green", "--high", "red"] 10
                    , Run Swap [] 10
                    , Run Com "ip" ["route"] "" 10
                    , Run BatteryP ["CMB1"] [ "-t", "<acstatus>" , "-L", "20" , "-H", "80" , "--low", "#c16666" , "--normal" , "#d3d7cf" , "--" , "-o" , "<left>% (<timeleft>)" , "-O" , "Charging <left>%" , "-i" , "<left>%" ] 50
                    , Run Date "%a %m/%d %H:%M" "date" 10
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader%  }{ %cpu% | %memory% * %swap% | %eth0% - %eth1% | <fc=#ee9a00>%date%</fc> | ip: %ip%"
       }
